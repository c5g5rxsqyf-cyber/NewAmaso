## Backend (server/index.js)
#
# Contact form API listens on PORT and sends:
# - a notification email to CONTACT_TO
# - a confirmation email back to the submitter (auto-reply)
#
# PORT=3001
#
# Local/dev option: logs emails instead of sending
# EMAIL_TRANSPORT=stream

EMAIL_TRANSPORT=smtp
SMTP_HOST=smtp.yourprovider.com
SMTP_PORT=587
SMTP_USER=info@amaso.nl
SMTP_PASS=your_smtp_password

# Notification email target
CONTACT_TO=info@amaso.nl

# Outgoing From header for notification emails
SMTP_FROM=AMASO Website <info@amaso.nl>

# Auto-reply (confirmation email)
AUTO_REPLY_ENABLED=1
AUTO_REPLY_FROM=AMASO <info@amaso.nl>
AUTO_REPLY_SUBJECT=We received your message â€” AMASO

# Branding used in the auto-reply template
BRAND_NAME=AMASO
BRAND_WEBSITE=https://amaso.nl
BRAND_SUPPORT_EMAIL=info@amaso.nl

